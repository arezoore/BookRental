

@{
    ViewData["Title"] = "List of Books";
}

<h1>List of Available Books</h1>
@if(User.IsInRole("Admin")){
<p>
    <button class="btn btn-info"><a asp-action="Create" style="color: white;">Create New Book</a></button>
</p>
}

<div class="text_center">
    @if(!User.IsInRole("Member") && !User.IsInRole("Admin")){
        <div class="text_center">
            <h5 style="color: red;">For book rentals, membership approval from an administrator is required before access is granted.</h5>
        </div>

    }
<component type="typeof(RazorBooks)" render-mode="ServerPrerendered" />
</div>



